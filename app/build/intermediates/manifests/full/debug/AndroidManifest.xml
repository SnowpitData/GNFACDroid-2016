<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gnfac.app"
    android:versionCode="8"
    android:versionName="1.08" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/friends_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Marks" >
        <activity
            android:name="gnfac.app.GNFACActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="gnfac.app.AdvisoryActivity" >
        </activity>
        <activity android:name="gnfac.app.PhotoActivity" >
        </activity>
        <activity android:name="gnfac.app.VideoActivity" >
        </activity>
        <activity android:name="gnfac.app.WeatherActivity" >
        </activity>
        <activity android:name="gnfac.app.SubmitActivity" >
        </activity>
    </application>

</manifest>